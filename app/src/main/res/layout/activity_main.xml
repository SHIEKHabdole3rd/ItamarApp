<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Main_Activity">

    <TextView
        android:id="@+id/TVgamename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Neonheart"
        android:textColor="@color/design_default_color_primary"
        android:textSize="24sp" />

    <Button
        android:id="@+id/BTNPlay"

        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:background="@drawable/btnstart"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Play"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/BTNDeck"

        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:background="@drawable/btnstart"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Deck builder"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <Button
        android:id="@+id/BTNCustomize"

        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_gravity="center"

        android:background="@drawable/btnstart"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Customize cardback"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <Button
        android:id="@+id/BTNAchivment"

        android:layout_width="343dp"
        android:layout_height="49dp"
        android:layout_gravity="center"

        android:background="@drawable/btnstart"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Achivment"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/BTNexit"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btnstart"
        android:text="Exit"
        android:textColor="@android:color/background_light" />

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


</LinearLayout>