<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lobbies_activity">

    <Button
        android:id="@+id/BTNceatelobby"
        android:layout_width="193dp"
        android:layout_height="52dp"
        android:layout_marginBottom="303dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="Create a looby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BTNdeck"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/LVlobbies"
        android:layout_width="413dp"
        android:layout_height="378dp"
        android:background="#A9FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/BTNceatelobby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTNdeck"
        android:layout_width="167dp"
        android:layout_height="54dp"
        android:layout_marginBottom="301dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="build a deck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BTNceatelobby" />

</androidx.constraintlayout.widget.ConstraintLayout>